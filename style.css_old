/* Responsive styles */
@media (max-width: 768px) {
    header {
        padding: 10px;
    }

    nav {
        padding: 5px;
    }

    nav a {
        margin: 0 5px;
    }

    section {
        padding: 10px;
        margin: 10px auto;
    }

    section h2 {
        font-size: 1.5em;
        font-family: "Nunito", sans-serif;
    }

    input[type="text"],
    input[type="email"],
    textarea {
        width: 90%;
    }

    input[type="submit"] {
        width: 100%;
    }

    footer {
        padding: 30px 7% 30px;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, auto));
        gap: 2rem;

    }
} 
